{
  "name": "@himanshu-mamgain/bridge-ai",
  "version": "1.0.0",
  "description": "Unified AI SDK for OpenAI, Gemini, Claude, Perplexity, and DeepSeek. Designed like AWS SDK v3.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "ai",
    "sdk",
    "openai",
    "gemini",
    "claude",
    "anthropic",
    "perplexity",
    "deepseek",
    "llm",
    "unified-ai"
  ],
  "author": "Himanshu Mamgain",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/himanshu-mamgain/bridge-ai.git"
  },
  "homepage": "https://github.com/himanshu-mamgain/bridge-ai#readme",
  "bugs": {
    "url": "https://github.com/himanshu-mamgain/bridge-ai/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitepress": "^1.6.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.18.0",
    "@google/generative-ai": "^0.24.1",
    "dotenv": "^16.4.5",
    "openai": "^4.28.4"
  }
}
